geometry.is_periodic    =   1   0   1   # Periodicity x y z (0/1)

incflo.delp             =   0.  0.  2.  # Prescribed (cyclic) pressure gradient

# Boundary conditions
ylo.type                =   "nsw"
yhi.type                =   "nsw"

#¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨#
